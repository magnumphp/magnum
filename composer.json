{
  "name": "magnum/magnum",
  "type": "library",
  "description": "Extending various packages since 2018",
  "keywords": [
    "container",
    "proxy",
    "console"
  ],
  "homepage": "https://github.com/magnumphp/magnum",
  "license": "MIT",
  "authors": [
    {
      "name": "Magnum Contributors",
      "homepage": "https://github.com/magnumphp/magnum/contributors"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload" : {
    "psr-4": {
      "Magnum\\" : "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Magnum\\": "tests/unit"
    }
  },
  "require": {
    "dlundgren/phrender": "~0.1",
    "dlundgren/pipeware": "^2.0",
    "jeremeamia/xstatic": "~1.0",
    "josegonzalez/dotenv": "^3.2",
    "middlewares/utils": "^1.0 | ^2.1",
    "psr/http-message": "^1.0",
    "slim/slim": "4.x-dev",
    "symfony/console": "^4.1"
  },
  "require-dev": {
    "mikey179/vfsStream": "^1.6",
    "phploc/phploc": "^4.0",
    "phpunit/phpunit": "^7.4",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.1",
    "squizlabs/php_codesniffer": "^3.3",
    "syberisle/coding-standards": "^2.0"
  },
  "scripts" : {
    "test" : "@php vendor/bin/phpunit --colors=always",
    "test-coverage" : "@php vendor/bin/phpunit --colors=always --coverage-html=tests/html-coverage",
    "sniff": [
      "@php vendor/bin/phpcs --config-set installed_paths vendor/syberisle/coding-standards",
      "@php vendor/bin/phpcs --standard=SyberIsle src/"
    ],
    "format" : [
      "@php vendor/bin/phpcs --config-set installed_paths vendor/syberisle/coding-standards",
      "@php vendor/bin/phpcbf --standard=SyberIsle src/"
    ],
    "phpdoc" : [
      "docker run --rm -v $(pwd):/data phpdoc/phpdoc"
    ],
    "phploc": [
      "@php vendor/bin/phploc src tests > docs/phploc.txt"
    ],
    "phpcpd": [
      "@php vendor/bin/phpcpd src tests"
    ]
  }
}
