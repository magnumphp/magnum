{
  "name": "magnum/magnum",
  "type": "library",
  "description": "A wrapper around Slim, and Symfony Console",
  "keywords": [
    "container",
    "proxy",
    "console"
  ],
  "homepage": "https://github.com/magnumphp/magnum",
  "license": "MIT",
  "authors": [
    {
      "name": "Magnum Contributors",
      "homepage": "https://github.com/magnumphp/magnum/contributors"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload" : {
    "psr-4": {
      "Magnum\\" : "src"
    }
  },
  "require": {
    "dlundgren/phrender": "~0.1",
    "dlundgren/pipeware": "^1.0",
    "jeremeamia/xstatic": "~1.0",
    "josegonzalez/dotenv": "^3.2",
    "middlewares/utils": "^1.0 | ^2.1",
    "psr/http-message": "^1.0",
    "slim/slim": "4.x-dev",
    "symfony/console": "^4.1"
  },
  "require-dev": {
    "aura/di": "^3.4",
    "league/container": "^2.4",
    "syberisle/coding-standards": "^2.0"
  },
  "scripts" : {
    "test" : "phpunit",
    "sniff": [
      "phpcs --config-set installed_paths vendor/syberisle/coding-standards",
      "phpcs --standard=SyberIsle src/"
    ],
    "format" : [
      "phpcs --config-set installed_paths vendor/syberisle/coding-standards",
      "phpcbf --standard=SyberIsle src/"
    ]
  }
}
