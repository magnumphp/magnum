{
  "name": "magnum/magnum",
  "type": "library",
  "description": "Extending various packages since 2018",
  "keywords": [
    "container",
    "proxy",
    "console"
  ],
  "homepage": "https://github.com/magnumphp/magnum",
  "license": "MIT",
  "authors": [
    {
      "name": "Magnum Contributors",
      "homepage": "https://github.com/magnumphp/magnum/contributors"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Magnum\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Magnum\\": "tests/unit"
    }
  },
  "require": {
    "php": ">=8.1",
    "dlundgren/phrender": "~0.2",
    "dlundgren/slim-turbo": "^0.5",
    "josegonzalez/dotenv": "^4.0",
    "league/uri": "^7.5",
    "lhsazevedo/restatic": "~3",
    "middlewares/utils": "^3.0 | ^4.0",
    "nikic/fast-route": "^1.0",
    "psr/http-message": "^1 | ^2",
    "psr/log": "^1.1 | ^2 | ^3",
    "roave/better-reflection": "^6.18",
    "syberisle/filereflection": "^1.3",
    "symfony/config": "^6",
    "symfony/console": "^6",
    "symfony/dependency-injection": "^6",
    "symfony/finder": "^6",
    "webmozart/assert": "^1.11"
  },
  "require-dev": {
    "guzzlehttp/psr7": "^2.8.0",
    "laminas/laminas-diactoros": "^2 | ^3",
    "mikey179/vfsstream": "^1.6",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": ">=10.0",
    "roave/security-advisories": "dev-master",
    "slim/http": "^1.2",
    "slim/psr7": "^1.0",
    "squizlabs/php_codesniffer": "^3.3",
    "syberisle/coding-standards": "^2.0"
  },
  "scripts": {
    "test": "@php vendor/bin/phpunit --colors=always",
    "test-clover": "@php vendor/bin/phpunit --coverage-clover=build/coverage/clover.xml",
    "test-coverage": "@php vendor/bin/phpunit --colors=always --coverage-html=build/coverage",
    "sniff": "@php vendor/bin/phpcs",
    "format": "@php vendor/bin/phpcbf",
    "phpdoc": "docker run --rm -v $(pwd):/data phpdoc/phpdoc",
    "stan": "@php -d memory_limit=-1 vendor/bin/phpstan analyse src"
  }
}
